@import '../../../../style/common.wxss';
.tkm-loanManagementTitle{margin:10px auto 20px 3%;}
.tkm-loanManagementContent{box-shadow:0px 0px 10px rgba(195,195,195,.7);margin:20rpx auto;border-radius:15rpx;padding:20rpx 0;box-sizing:border-box;}
.tkm-loanManagementContent .line{width:100%;height:1rpx;background:#f5f5f5;display:block;margin:20rpx 0;clear:both;}
.tkm-loanManagementContent .title{width:100%;padding:5rpx 3%;box-sizing:border-box;font-size:medium}
.tkm-loanManagementContent .content{width:100%;padding:5rpx 3%;box-sizing:border-box;font-size:small}
.tkm-loanManagementContent .content .l{display:inline-block;width:30%;text-align:left;color:#808080}
.tkm-loanManagementContent .content .r{display:inline-block;width:70%;text-align:right;color:#222222}
.tkm-loanManagementContent .btn{width:100%;text-align:center;}
.tkm-loanManagementContent navigator{display:inline-block;margin:0 3%}
.tkm-loanManagementContent .btn-a{background:#3f77ff;color:#ffffff;box-shadow:0px 3px 8px rgba(63,119,255,.6);padding:10rpx 50rpx;font-size:small;border-radius:50rpx;}
.tkm-loanManagementContent .btn-b{background:#ffffff;color:#3f77ff;padding:9rpx 70rpx;font-size:small;border-radius:50rpx;border:1px solid #808080;}

