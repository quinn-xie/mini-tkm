@import '../../../../style/common.wxss';
.tkm-myRewardTitle{margin:10px auto 20px 3%}

/*红包样式*/
.redPackList{width:100%;box-shadow:0px 0px 8px rgba(195,195,195,.3);border-radius:15rpx;position:relative;margin-bottom:35rpx;background:#ffffff}
.redPackList::before{content:"";display:block;position:absolute;width:24rpx;height:24rpx;border-radius:24rpx;background-color:#ffffff;left:150rpx;top:-15rpx;}
.redPackList::after{content:"";display:block;position:absolute;width:24rpx;height:24rpx;border-radius:24rpx;background-color:#ffffff;left:150rpx;bottom:-15rpx;}
.redPackList .l{width:160rpx;height:180rpx;display:inline-block;background:#ffdddd;text-align:center;box-sizing:border-box;border-radius:15rpx 0 0 15rpx;padding-top:40rpx;color:#ff2766;font-size:x-large;vertical-align:top;}
.redPackList .l text{display:block;color:#ff88aa;font-size:x-small;line-height:200%;}
.redPackList .r{width:75%;display:inline-block;vertical-align:top;box-sizing:border-box;padding:35rpx 20rpx;font-size:small;color:#3f77ff;}
.redPackList .r .ll{width:65%;display:inline-block;vertical-align:middle;text-align:left;}
.redPackList .r .rr{width:35%;display:inline-block;vertical-align:middle;text-align:right;}
.redPackList .r text{display:block;font-size:x-small;margin-top:30rpx;color:#808080;}
.redPackUsed{background:#f4f5fc;box-shadow:0px 0px 8px rgba(195,195,195,.3)}
.redPackUsed .l{background:#e7ecfd;color:#c4cbe0;}
.redPackUsed .l text,.redPackUsed .r text{color:#c4cbe0;}
.redPackUsed .r{color:#c4cbe0;}

.myCoin{text-align:center;font-size:xx-large;color:#002d5c;height:450rpx;box-sizing:border-box;padding-top:60rpx;}
.myCoinbg{width:100%;position:absolute;top:400rpx;left:0px;}
.myCoin text{display:block;font-size:small;color:#3f77ff;}

.rewardTitle{font-size:large;color:#002d5c;margin-bottom:30rpx;display:block;}
.tkm-shadowBox{width:100%;box-shadow:0px 0px 10px rgba(195,195,195,.7);margin:20rpx auto 50rpx auto;border-radius:15rpx;padding:20rpx 0;box-sizing:border-box;line-height:160%;}
.tkm-shadowBox .line{width:100%;height:1rpx;background:#f5f5f5;display:block;margin:20rpx 0;clear:both;}
.tkm-shadowBox .bigTitle{font-size:medium; color:#3f77ff;margin:20rpx 0;}
.tkm-shadowBox .title{width:100%;padding:5rpx 3%;box-sizing:border-box;font-size:medium}
.tkm-shadowBox .content{width:100%;padding:5rpx 3%;box-sizing:border-box;font-size:small;color:#808080}
.tkm-shadowBox .content .l{display:inline-block;width:50%;text-align:left;}
.tkm-shadowBox .content .r{display:inline-block;width:50%;text-align:right;}