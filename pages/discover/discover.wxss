@import '../../style/common.wxss';
navigator{width:auto;display:inline-block}
.discoverBg{width:100%;height:1200rpx;position:fixed;text-align:right}
.discoverBg image{width:100%;height:1200rpx}

/*发现TITLE*/
.tkm-discover-title{font-size:x-large;color:#002d5c;width:92%;text-align:left;margin-left:4%;position:relative;letter-spacing:0px;}
.tkm-discover-title::after{content:"";display:block;clear:both;}
.tkm-discover-title text{font-size:small;width:100%;float:left;display:block;line-height:30px;}
.tkm-discover-title .avatars{position:absolute;right:0rpx;top:0rpx;width:120rpx;height:120rpx;border-radius:120rpx;overflow: hidden}

/*小入口*/
.flex-wrp{height:150px;display:flex;padding:10rpx 30rpx; margin-bottom: 10rpx;}
.scroll-view{white-space:nowrap;}
.scroll-view-item{display:inline-block;width:190rpx;height:250rpx;background:#ffffff;margin:30rpx 20rpx 20rpx 5rpx;border-radius:15rpx;box-shadow:0px 0px 15px rgba(195,195,195,.7);position:relative;text-align:center;color:#002d5c;font-size:small;}
.scroll-view-item .icon{width:80rpx;height:80rpx;display:block;margin:50rpx auto;}
.scroll-view-item .quantity{width:40rpx;height:40rpx;border-radius:40rpx;line-height:40rpx;background:#3f77ff;color:#ffffff;position:absolute;bottom:-5px;right:-5px;font-size:x-small;}
.scroll-view .hoverClass{box-shadow:0px 0px 15px rgba(63,119,255,.4)}

/*热门活动*/
.tkm-hotEventTitle{width:92%;text-align:left;margin-left:4%;position:relative;font-size:medium;color:#002d5c;font-weight:bold;margin-bottom:30rpx;letter-spacing:2px;}
.tkm-hotEventTitle .more{color:#3f77ff;font-size:small;position:absolute;right:-30rpx;bottom:0;}
.tkm-swiper {height:530rpx;width:100%;position:relative;}
.tkm-swiper image{width:98%;height:400rpx;border-radius:20rpx 20rpx 0 0;display:block;margin-left:1%}
.tkm-swiper .eventTitle{width:98%;background:#ffffff;padding:15rpx 20rpx;box-sizing:border-box;border-radius:0 0 20rpx 20rpx;display:block;box-shadow:0px 5px 15px rgba(195,195,195,.7);border:1px solid #f5f5f5;margin-left:1%;font-size:small;color:#808080;letter-spacing:2px;overflow:hidden;white-space: nowrap; text-overflow: ellipsis}