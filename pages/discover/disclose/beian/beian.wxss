@import '../../../../style/common.wxss';
.tkm-shadowBox{width:100%;box-shadow:0px 0px 10px rgba(195,195,195,.7);margin:30rpx auto;border-radius:15rpx;padding:30rpx 0;box-sizing:border-box;line-height:220%;}
.tkm-shadowBox .content{width:100%;padding:10rpx 3%;box-sizing:border-box;font-size:small;color:#002d5c;}
.tkm-shadowBox .content:nth-child(2n){background:#f4f8ff;}
.tkm-shadowBox .content .l{display:inline-block;width:50%;text-align:left;font-weight:bold;vertical-align:top}
.tkm-shadowBox .content .r{display:inline-block;width:50%;text-align:left;vertical-align:top}
.tkm-shadowBox .content .line{display:inline-block;width:100%;text-align:left;}