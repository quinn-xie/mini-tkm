@import '../../../../style/common.wxss';

.tkm-charts{width:100%;height:750rpx;background:linear-gradient(180deg, #3736c5, #3f77ff);position:relative;}
#monthlyTransaction{position:absolute;height:260px;top:180rpx;bottom:50%;left:0;right:0;}
#loanProportion{position:absolute;height:260px;top:180rpx;bottom:0;left:0;right:0;}
#durationRatio{position:absolute;height:260px;top:180rpx;bottom:0;left:0;right:0;}

.tkm-deal{position:absolute;top:40rpx;color:#ffffff;font-size:x-small}
.tkm-deal .detail{font-size:xx-large;display:block;}
.tkm-dealTotal{left:3%;text-align:left;}
.tkm-dealCount{right:3%;text-align:right;}
.tkm-deal .unit{display:inline-block;font-size:xx-small;}

.tkm-tab-title{padding:0rpx;background:#ffffff;position:absolute;border-radius:50rpx;box-sizing:border-box;top:710rpx;box-shadow:0px 2px 10px rgba(165,165,165,.3);}
.tkm-tab-title .item{font-size:x-small;color:#002d5c;text-align:center;padding:12rpx 10rpx;}
.tkm-tab-title .active{color:#ffffff;background:#3f77ff;border-radius:20px;box-shadow:0px 5px 10px rgba(63,119,255,.3)}

.tkm-shadowBox{width:100%;box-shadow:0px 0px 15px rgba(195,195,195,.5);margin:30rpx auto;border-radius:15rpx;box-sizing:border-box;line-height:180%;padding:15rpx}
.tkm-addup{margin-top:70rpx;}
.tkm-addup .linea{width:100%;height:1rpx;background:#e8eefe;display:block;margin:15rpx auto;}
.tkm-addup .lineb{width:1rpx;height:100rpx;background:#e8eefe;display:inline-block;vertical-align:middle}
.tkm-addup .item{width:49%;display:inline-block;text-align:left;vertical-align:middle;padding-left:30rpx;box-sizing:border-box;color:#002d5c;font-size:x-large}
.tkm-addup .item text{font-size:x-small;color:#a0a0a0;display:block;line-height:150%;}
/*出借人性别分布占比*/
.sexProportion canvas{text-align:center;margin:0 auto;display:block;width:300px;height:300px;}
.sexProportion .title{color:#002d5c;font-size:small;margin:20rpx;}
/*项目金额分布占比*/
.itemProportion canvas{text-align:center;margin:0 auto;display:block;width:100%;height:230px;}
.itemProportion .title{color:#002d5c;font-size:small;margin:20rpx;}