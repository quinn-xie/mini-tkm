@import '../../../../style/common.wxss';
.tkm-shadowBox{width:100%;box-shadow:0px 0px 15px rgba(195,195,195,.5);margin:30rpx auto;border-radius:15rpx;box-sizing:border-box;line-height:180%;}
.tkm-shadowBox .content{width:100%;box-sizing:border-box;color:#002d5c;padding:5rpx;font-size:large;letter-spacing:1px;}
.tkm-shadowBox .content text{display:block;font-size:x-small;letter-spacing:0px;}
.tkm-shadowBox .content .l{display:inline-block;width:24%;vertical-align:middle;background-color:#e9f1ff;border-radius:20rpx;color:#3f77ff;padding:20rpx 0;text-align:center;}
.tkm-shadowBox .content .l image{width:80rpx;margin-top:20rpx;}
.tkm-shadowBox .content .r{display:inline-block;width:76%;vertical-align:middle;text-align:left;padding-left:40rpx;box-sizing:border-box}