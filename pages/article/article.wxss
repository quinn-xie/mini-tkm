@import '../../style/common.wxss';

/**LOAN LIST**/
.tkm-loan .hoverClass{background:#fbfcff;box-shadow:0px 3px 8px rgba(63,119,255,.2);opacity:0.8}
.tkm-tab-title > .radioBox{position:fixed;top:0;left:0;box-sizing:border-box;background:#ffffff;width:100%;margin-left: 0}
.tkm-tab-title > .radioBox > .item{font-size:medium;text-align:center;letter-spacing:2px;color:#c5c5c5;padding-bottom:20rpx;}
.tkm-tab-title > .radioBox > .active{color:#002d5c;border-bottom:2px solid #002d5c;font-size:bold;}


.tkm-loan{margin-top:120rpx;}
.tkm-loanList{padding:20rpx;background:#ffffff;border-radius:15rpx;box-sizing:border-box;margin-bottom:20rpx;box-shadow:0px 2px 10px rgba(63,119,255,.3);font-size:small}
.tkm-loanList .title{color:#002d5c;padding-bottom: 10rpx}
.tkm-loanList .title .date{color:#c5c5c5;margin:10rpx 0;}


.tkm-loanList .state{float:right}
.tkm-loanList .state .icon{width:10px;height:10px;border-radius:10px;margin-left:5px;box-shadow:0px 2px 5px rgba(63,119,255,.3);}
.tkm-loanList .s-title-l{width:100%;float:left;color:#9e9e9e;padding-top:8px;font-size:x-small;text-align:left}
.tkm-loanList .s-title-c{width:100%;float:left;color:#9e9e9e;padding-top:8px;font-size:x-small;text-align:center}
.tkm-loanList .s-title-r{width:100%;float:left;color:#9e9e9e;padding-top:8px;font-size:x-small;text-align:right}
.tkm-loanList .limitTitle{font-size:large;height:40rpx;color:#002d5c}
.tkm-loanList .limitTitle .text{font-size:small;color:#808080}
.tkm-loanList .tkm-flexs{margin:20rpx 0}
.tkm-loanList .tkm-flexs .items{margin:0;text-align:center;float:left;}
.tkm-loanList .tkm-flexs .items:first-child{text-align:left;width:40%;}
.tkm-loanList .tkm-flexs .items:last-child{text-align:right;float:right}
.tkm-loanList .tkm-flexs::after{content:"";height:0;line-height:0;display:block;visibility:hidden;clear:both}
.tkm-loanList .totalMoney{margin-top:15rpx;font-size:x-small;color:#808080}
.tkm-loanList .percent{float:right;color:#002d5c}
