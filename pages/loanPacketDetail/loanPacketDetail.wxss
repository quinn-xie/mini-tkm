@import '../../style/common.wxss';
/**LOAN LIST**/
.tkm-loan{background:#ffffff;width:100%;padding:20rpx 0}
.tkm-loanList{padding:20rpx;border-radius:15rpx;box-sizing:border-box;margin-bottom:0rpx;box-shadow:0px 2px 10px rgba(63,119,255,.3);font-size:small;color:#ffffff;background:linear-gradient(180deg, #3736c5, #457bff);}
.tkm-loanList .state{float:right}
.tkm-loanList .state .icon{width:10px;height:10px;border-radius:10px;margin-left:5px;box-shadow:0px 2px 5px rgba(63,119,255,.3);}
.tkm-loanList .rote{padding:30rpx 0 10rpx 0;font-size:large;}
.tkm-loanList .rote .roteTitle{font-size:x-small;padding:20rpx 0;}
.tkm-loanList .s-title-l{width:100%;float:left;color:#ffffff;padding-top:8px;font-size:x-small;text-align:left}
.tkm-loanList .s-title-c{width:100%;float:left;color:#ffffff;padding-top:8px;font-size:x-small;text-align:center}
.tkm-loanList .s-title-r{width:100%;float:left;color:#ffffff;padding-top:8px;font-size:x-small;text-align:right}
.tkm-loanList .limitTitle{font-size:large;height:40rpx;color:#ffffff}
.tkm-loanList .limitTitle .text{font-size:small;color:#ffffff}
.tkm-loanList .tkm-flexs{margin:20rpx 0}
.tkm-loanList .tkm-flexs .items{margin:0;text-align:center;float:left;}
.tkm-loanList .tkm-flexs .items:first-child{text-align:left;width:40%;}
.tkm-loanList .tkm-flexs .items:last-child{text-align:right;float:right}
.tkm-loanList .tkm-flexs::after{content:"";height:0;line-height:0;display:block;visibility:hidden;clear:both}
.tkm-loanList .totalMoney{margin-top:15rpx;font-size:x-small;color:#ffffff}
.tkm-loanList .percent{float:right;color:#ffffff}

/*CELL*/
.tkm-cellBox{position:relative;padding:10px 0;}
.tkm-cell{position:relative;display:inline-block;width:100%;padding:30rpx;box-sizing:border-box;box-shadow:0px 0px 10px rgba(195,195,195,.5);margin-bottom:20rpx;border-radius:15rpx;}
.tkm-cell::after{border-bottom:none}
/*.tkm-cell view::after{content:"＞";width:30px;height:30px;line-height:30px;text-align:center;border-radius:30px;display:block;position:absolute;right:20rpx;top:20px;font-size:medium;color:#808080;background:#ffffff;box-sizing:border-box;padding-left:5px}*/
.tkm-cell .pic{width:80rpx;height:80rpx;display:inline-block;vertical-align:top;}
.tkm-cell .pic image{width:80rpx;height:80rpx;}
.tkm-cell .name{height:80rpx; line-height:80rpx;display:inline-block;vertical-align:top;margin-left:10px;font-size:large;font-weight:bold;letter-spacing:5px;}
.tkm-cell .arrow-right{width:50rpx;height:50rpx;position:absolute;right:20rpx;top:20px;}