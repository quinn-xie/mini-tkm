<view class='tkm-page'>
  <view class='tkm-loanDetailMsg-list'>
    <icon><image src='../../../images/icon-1.png'></image></icon>
    <view class='content'>
      <view class='title'>{{loanDetailMsg.remainTime}}</view>
      <text>剩余时间</text>
    </view>
    <view class='rightContent'>
      <view class='title'>{{loanDetailMsg.remainAmount}}</view>
      <text>可投金额</text>
    </view>
  </view>
  <view class='tkm-loanDetailMsg-list'>
    <icon><image src='../../../images/icon-2.png'></image></icon>
