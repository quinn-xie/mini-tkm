      <view class='title'>还款方式</view>
      <text>{{loanDetailMsg.repaymentWay}}</text>
    </view>
  </view>
  <view class='tkm-loanDetailMsg-list'>
    <icon><image src='../../../images/icon-4.png'></image></icon>
    <view class='content'>
      <view class='title'>发布时间</view>
      <text>{{loanDetailMsg.publishTime}}</text>
    </view>
  </view>
</view>
