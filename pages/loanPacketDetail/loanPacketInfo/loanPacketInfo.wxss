@import '../../../style/common.wxss';

/*项目信息*/
.tkm-loanDetailInfo .title{color:#002d5c;font-size:medium;padding:10px 0;}
.tkm-loanDetailInfo .title::before{content:"";width:5rpx;height:25rpx;background-color:#002d5c;display:inline-block;margin-right:10rpx;}
.tkm-loanDetailInfo .content{color:#808080;font-size:small}
.tkm-loanDetailInfo::after{content:"";width:100%;height:1rpx;background-color:#dcdcdc;display:inline-block;}

.tkm-loanDetailInfo .cellBox{width:100%;position:relative;padding:10rpx 0;}
.tkm-loanDetailInfo .cellBox .subTitle{width:25%;display:inline-block;vertical-align:top;text-align:left;}
.tkm-loanDetailInfo .cellBox .subContent{width:75%;display:inline-block;vertical-align:top;text-align:right;color:#222222}
.tkm-loanDetailInfo .cellBox icon{width:50rpx;height:50rpx;border-radius:50rpx;background-color:#002d5c;float:right;}

